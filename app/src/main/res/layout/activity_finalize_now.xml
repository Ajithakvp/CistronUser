<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SalesAndservice.Activity.FinalizeNow">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rltoolbar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#6495ED">

                    <TextView
                        android:id="@+id/tvHeader"
                        style="@style/header"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/bold"
                        android:text="Finalize Now"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/ivBack"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="35dp"
                        android:layout_toLeftOf="@id/tvHeader"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/ic_baseline_arrow_left_24"
                        android:tint="@color/white"
                        tools:ignore="UseAppTint" />


                    <ImageView
                        android:id="@+id/ivList"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/tvHeader"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/ic_baseline_view_list_24"
                        android:tint="@color/white"
                        android:visibility="gone"
                        tools:ignore="UseAppTint" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rltoolbar">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tiPOR"
                            style="@style/textInput2"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="8dp"
                            app:endIconMode="clear_text"
                            app:errorEnabled="true">

                            <EditText
                                android:id="@+id/edPOR"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittext"
                                android:backgroundTint="@color/whiteLite2"
                                android:fontFamily="@font/semibold"
                                android:hint="PO Ref "
                                android:textColor="@color/black"
                                android:textSize="18dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/edittext"
                            android:backgroundTint="@color/whiteLite2"
                            android:fontFamily="@font/semibold"
                            android:gravity="center"
                            android:hint="PO Date"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tvAttach"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/edittext"
                            android:backgroundTint="@color/whiteLite2"
                            android:fontFamily="@font/semibold"
                            android:gravity="center"
                            android:hint="Attach PO"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:visibility="visible" />


                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/edittext"
                            android:backgroundTint="@color/whiteLite2"
                            android:fontFamily="@font/semibold"
                            android:gravity="center"
                            android:hint="Billing Address"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:visibility="visible" />

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/spPerson"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/edittext"
                            android:backgroundTint="@color/whiteLite2"
                            android:fontFamily="@font/semibold"
                            android:gravity="center"
                            android:visibility="visible"
                            app:hintText="Contact Person Prefix" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tvname"
                            style="@style/textInput2"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="8dp"
                            app:endIconMode="clear_text"
                            app:errorEnabled="true">

                            <EditText
                                android:id="@+id/edName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edittext"
                                android:backgroundTint="@color/whiteLite2"
                                android:fontFamily="@font/semibold"
                                android:hint="Name "
                                android:textColor="@color/black"
                                android:textSize="18dp" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tvmob"
                            style="@style/textInput2"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            app:endIconMode="clear_text"
                            app:errorEnabled="true">

                            <EditText
                                android:id="@+id/edMobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittext"
                                android:backgroundTint="@color/whiteLite2"
                                android:fontFamily="@font/semibold"
                                android:hint="Contact Number"
                                android:textColor="@color/black"
                                android:textSize="18dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tvQus"
                            style="@style/textInput2"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            app:endIconMode="clear_text"
                            app:errorEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edQus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittext"
                                android:backgroundTint="@color/whiteLite2"
                                android:fontFamily="@font/semibold"
                                android:hint="Product Specification"
                                android:text="As per Quotation"
                                android:textColor="@color/black"
                                android:textSize="18dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/tvQty"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/edittext"
                            android:backgroundTint="@color/whiteLite2"
                            android:fontFamily="@font/semibold"
                            android:gravity="center"
                            android:hint="Qty"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:visibility="visible" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tvOrder"
                            style="@style/textInput2"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="8dp"
                            app:endIconMode="clear_text"
                            app:errorEnabled="true">

                            <EditText
                                android:id="@+id/edOrderValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edittext"
                                android:backgroundTint="@color/whiteLite2"
                                android:fontFamily="@font/semibold"
                                android:hint="Order Value "
                                android:textColor="@color/black"
                                android:textSize="18dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tvAdvanceValue"
                            style="@style/textInput2"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            app:endIconMode="clear_text"
                            app:errorEnabled="true">

                            <EditText
                                android:id="@+id/edAdvanceValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittext"
                                android:backgroundTint="@color/whiteLite2"
                                android:fontFamily="@font/semibold"
                                android:hint="Advance Value "
                                android:textColor="@color/black"
                                android:textSize="18dp" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvDepos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="13dp"
                                android:fontFamily="@font/semibold"
                                android:text="Deposited :"
                                android:textColor="@color/RoseRed"
                                android:textSize="18dp" />

                            <CheckBox
                                android:id="@+id/cbDeposited"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/tvDepos" />
                        </RelativeLayout>


                        <TextView
                            android:id="@+id/tvDepositedDate"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/edittext"
                            android:backgroundTint="@color/whiteLite2"
                            android:fontFamily="@font/semibold"
                            android:gravity="center"
                            android:hint="Deposited Date"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:visibility="visible" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tvpaymentBforeDispatch"
                            style="@style/textInput2"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="8dp"
                            app:endIconMode="clear_text"
                            app:errorEnabled="true">

                            <EditText
                                android:id="@+id/edpaymentBforeDispatch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittext"
                                android:backgroundTint="@color/whiteLite2"
                                android:fontFamily="@font/semibold"
                                android:hint="Payment Before Dispatch "
                                android:textColor="@color/black"
                                android:textSize="18dp" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tvpaymentAterDispatch"
                            style="@style/textInput2"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"

                            app:endIconMode="clear_text"
                            app:errorEnabled="true">

                            <EditText
                                android:id="@+id/edpaymentaterDispatch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittext"
                                android:backgroundTint="@color/whiteLite2"
                                android:fontFamily="@font/semibold"
                                android:hint="Payment After Dispatch "
                                android:textColor="@color/black"
                                android:textSize="18dp" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tvpaymentOnInstalltion"
                            style="@style/textInput2"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"

                            app:endIconMode="clear_text"
                            app:errorEnabled="true">

                            <EditText
                                android:id="@+id/edpaymentOnInstalltion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittext"
                                android:backgroundTint="@color/whiteLite2"
                                android:fontFamily="@font/semibold"
                                android:hint="Payment On Installation "
                                android:textColor="@color/black"
                                android:textSize="18dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvInstall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="11dp"
                                android:fontFamily="@font/semibold"
                                android:text="Installment Term :"
                                android:textColor="@color/RoseRed"
                                android:textSize="18dp" />

                            <ImageView
                                android:id="@+id/ivAdd"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_toRightOf="@id/tvInstall"
                                android:src="@drawable/ic_baseline_add_box_24" />
                        </RelativeLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tvRemarkPayment"
                            style="@style/textInput2"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="8dp"
                            app:endIconMode="clear_text"
                            app:errorEnabled="true">

                            <EditText
                                android:id="@+id/edRemarkPayment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittext"
                                android:backgroundTint="@color/whiteLite2"
                                android:fontFamily="@font/semibold"
                                android:hint="Remark Payment "
                                android:textColor="@color/black"
                                android:textSize="18dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvWarrenty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="11dp"
                                android:fontFamily="@font/semibold"
                                android:text="Warranty Terms :"
                                android:textColor="@color/blue"
                                android:textSize="18dp" />

                            <EditText
                                android:id="@+id/edWarrenty"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/edittext"
                                android:backgroundTint="@color/whiteLite2"
                                android:fontFamily="@font/semibold"
                                android:textColor="@color/black"
                                android:layout_marginLeft="8dp"
                                android:textSize="15dp"
                                android:layout_toRightOf="@id/tvWarrenty" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="11dp"
                                android:layout_below="@id/edWarrenty"
                                android:fontFamily="@font/semibold"
                                android:text="Months from the date of Installation / Supply-Whichever is earlier"
                                android:textColor="@color/Radio"
                                android:textSize="14dp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tvRemark"
                                style="@style/textInput2"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                app:endIconMode="clear_text"
                                app:errorEnabled="true">

                                <EditText
                                    android:id="@+id/edSpecialRemark"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edittext"
                                    android:backgroundTint="@color/whiteLite2"
                                    android:fontFamily="@font/semibold"
                                    android:hint="Special Remarks "
                                    android:textColor="@color/black"
                                    android:textSize="18dp" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <TextView
                                android:id="@+id/tvDeliveySchedule"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_below="@id/tvRemark"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/edittext"
                                android:backgroundTint="@color/whiteLite2"
                                android:fontFamily="@font/semibold"
                                android:gravity="center"
                                android:hint="Delivery Schedule"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:visibility="visible" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">



                            <TextView
                                android:id="@+id/tvSubmit"
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="25dp"
                                android:background="@drawable/size"
                                android:backgroundTint="#6495ED"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/bold"
                                android:gravity="center"
                                android:text="create order call"
                                android:layout_marginBottom="30dp"
                                android:textColor="@color/white"
                                android:textSize="20dp" />




                        </RelativeLayout>




                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>