<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/rlname"
                    android:layout_marginTop="5dp"
                    android:background="@color/blue"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/latest"
                    android:visibility="visible"
                    android:text="Cistron System"
                    android:textColor="#DFFF00"
                    android:textSize="22dp" />


                    <TextView
                        android:id="@+id/tvCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvName"
                        android:layout_marginLeft="8dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="5dp"
                        android:layout_toLeftOf="@id/tvTotal"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/semibold"
                        android:text="count-9"
                        android:textColor="@color/white"
                        android:textSize="12dp" />


                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvName"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:background="@color/Radio"
                        android:fontFamily="@font/semibold"
                        android:text="Total-30"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/ivDownload"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:layout_marginRight="10dp"
                        android:tint="@color/white"
                        android:src="@drawable/ic_baseline_file_download_24"
                        android:layout_toLeftOf="@id/tvName"
                         android:layout_alignParentEnd="true"
                        tools:ignore="UseAppTint" />

                </RelativeLayout>




                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlname"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/semibold"
                    android:text="12/32/2022 -"
                    android:textColor="@color/Radio"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvleavetype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlname"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/tvFDHD"
                    android:fontFamily="@font/semibold"
                    android:text="Cl -"
                    android:textColor="@color/Radio"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvReason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlname"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/tvleavetype"
                    android:fontFamily="@font/semibold"
                    android:text="Office work - Hyderabad"
                    android:textColor="@color/black"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/tvFDHD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlname"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/tvDate"
                    android:fontFamily="@font/semibold"
                    android:text="fullDay"
                    android:textColor="@color/blue"
                    android:textSize="15dp" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</RelativeLayout>