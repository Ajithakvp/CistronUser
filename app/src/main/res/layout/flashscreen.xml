<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whiteLite1"
    android:layout_height="match_parent">

    <com.scwang.wave.MultiWaveHeader
        android:id="@+id/waveHeader"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        app:mwhVelocity="1"
        app:mwhProgress="1"
        app:mwhGradientAngle="45"
        app:mwhWaveHeight="90dp"
        app:mwhColorAlpha="0.45"
        app:mwhStartColor="@color/Cistronbasecolor"
        app:mwhCloseColor="@color/Cistronbasecolor" />


    <ImageView
        android:id="@+id/lvcis"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
       android:src="@drawable/newcistronimg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@id/lvcis"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semibold"
        android:textColor="@color/Burgundy"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:text="Cistron Systems Private Ltd."
        />




    <com.scwang.wave.MultiWaveHeader
        android:id="@+id/waveHeaderbottom"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:scaleY="-1"
        app:mwhVelocity="1"
        app:mwhProgress="1"
        android:visibility="visible"
        app:mwhGradientAngle="45"
        app:mwhWaveHeight="90dp"
        app:mwhColorAlpha="0.45"
        app:mwhStartColor="@color/Cistronbasecolor"
        app:mwhCloseColor="@color/Cistronbasecolor" />

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/semibold"
        android:layout_marginBottom="10dp"
        android:textColor="@color/whiteLite2"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:text="Version"
        />

</RelativeLayout>