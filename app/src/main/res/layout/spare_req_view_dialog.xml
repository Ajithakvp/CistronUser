<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/cvView"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/tvCRNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/roboblod"
                    android:text="CR#23010502"
                    android:textColor="@color/blue"
                    android:textSize="17dp" />




                <TextView
                    android:id="@+id/tvPartTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_below="@+id/tvCRNo"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/semibold"
                    android:text="Part # :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/tvPart"
                    android:layout_toRightOf="@+id/tvPartTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCRNo"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/semibold"
                    android:text="MSPSCBTA"
                    android:textColor="@color/Burgundy"
                    android:textSize="15dp" />





                <TextView
                    android:id="@+id/tvPartNameTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_below="@+id/tvPart"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/semibold"
                    android:text="Part Name :"
                    android:visibility="visible"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvPartName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/tvPart"
                    android:layout_toRightOf="@+id/tvPartNameTag"
                    android:visibility="visible"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/semibold"
                    android:text="100ML CARTRIDGE BREAKER TOP PIPE - AUTOMATIC"
                    android:textColor="@color/Radio"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/tvReqQtyTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_below="@+id/tvPartName"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/semibold"
                    android:text="Requested Qty :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/tvReqQty"
                    android:layout_toRightOf="@+id/tvReqQtyTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPartName"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/semibold"
                    android:text="1"
                    android:textColor="@color/Burgundy"
                    android:textSize="15dp" />



            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</RelativeLayout>