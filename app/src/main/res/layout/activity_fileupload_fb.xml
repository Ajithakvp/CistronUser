<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceEngineer.Activity.Fileupload_fb">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rltoolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#6495ED">

            <TextView
                android:id="@+id/tvHeader"
                style="@style/header"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/bold"
                android:text="Feedback File Upload"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="35dp"
                android:layout_toLeftOf="@id/tvHeader"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_baseline_arrow_left_24"
                android:tint="@color/white"
                tools:ignore="UseAppTint" />





        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlUpload"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/rltoolbar"
            android:layout_marginTop="200dp"
            android:background="@drawable/size"
            android:backgroundTint="#D4E2E2">



            <TextView
                android:id="@+id/tvfilename"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:fontFamily="@font/semibold"
                android:gravity="center"
                android:visibility="visible"
                android:textColor="@color/Radio"
                android:text="Document Upload"
                android:textSize="15dp" />


            <ImageView
                android:id="@+id/ivConvencydoc"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="35dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_baseline_upload_24"
                android:visibility="visible" />




        </RelativeLayout>




        <TextView
            android:layout_below="@+id/rlUpload"
            android:id="@+id/tvfileSubmit"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/size"
            android:backgroundTint="@color/DarkRed"
            android:layout_height="40dp"
            android:fontFamily="@font/openssansbold"
            android:gravity="center"
            android:visibility="visible"
            android:textColor="@color/white"
            android:text="Upload"
            android:textSize="15dp" />


    </RelativeLayout>

</RelativeLayout>