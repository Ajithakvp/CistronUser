<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">




<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rltoolbar"
        android:background="#6495ED"
        android:layout_height="50dp">

        <TextView
            style="@style/header"
            android:id="@+id/tvHeader"
            android:textSize="20dp"
            android:layout_width="250dp"
            android:fontFamily="@font/bold"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:text="Profile"/>


        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="35dp"
            android:layout_toLeftOf="@id/tvHeader"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_baseline_expand_circle_down_24"
            android:tint="@color/white"
            tools:ignore="UseAppTint"  />


    </RelativeLayout>


<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_below="@+id/rltoolbar"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:id="@+id/rlView"/>-->

    <ImageView
        android:id="@+id/ivProfilePhoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/rltoolbar"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:src="@drawable/user" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/ivProfilePhoto"
        android:layout_marginBottom="50dp"
        android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvNameTag"
            android:text="Name  :"
            android:textSize="20dp"
            android:textColor="@color/blue"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvName"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/tvNameTag"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/semibold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvEmpTag"
            android:text="EMP ID  :"
            android:textColor="@color/blue"
            android:layout_below="@id/tvNameTag"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvEmpId"
            android:layout_below="@id/tvNameTag"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/tvEmpTag"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/semibold"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvDesignationTag"
            android:text="Designation  :"
            android:textColor="@color/blue"
            android:layout_below="@id/tvEmpTag"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvDesignation"
            android:text="Android developer"
            android:layout_below="@id/tvEmpTag"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/tvDesignationTag"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/semibold"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvBranchTag"
            android:text="Branch  :"
            android:textColor="@color/blue"
            android:layout_below="@id/tvDesignation"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvBranch"
            android:text="Tamil Nadu"
            android:layout_below="@id/tvDesignation"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/tvBranchTag"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/semibold"
            android:layout_height="wrap_content"/>



        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvTeamLeaderTag"
            android:text="Team Leader  :"
            android:layout_below="@id/tvBranch"
            android:textSize="20dp"
            android:textColor="@color/blue"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvTeamLeader"
            android:text="Cistron"
            android:layout_below="@id/tvBranch"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/tvTeamLeaderTag"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/semibold"
            android:layout_height="wrap_content"/>



        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvMobileTag"
            android:text="Mobile No  :"
            android:textColor="@color/blue"
            android:layout_below="@id/tvTeamLeader"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvMobile"
            android:text="9876543210"
            android:layout_below="@id/tvTeamLeader"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/tvMobileTag"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/semibold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvEmailTag"
            android:text="Email  :"
            android:layout_below="@id/tvMobile"
            android:textSize="20dp"
            android:textColor="@color/blue"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvEmail"
            android:text="cistron@gmail.com"
            android:layout_below="@id/tvMobile"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/tvEmailTag"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/semibold"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvDobTag"
            android:text="DOB  :"
            android:textColor="@color/blue"
            android:layout_below="@id/tvEmail"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvDob"
            android:text="10-12-2022"
            android:textColor="@color/black"
            android:layout_below="@id/tvEmail"
            android:textSize="15dp"
            android:layout_toRightOf="@id/tvDobTag"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/semibold"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvDojTag"
            android:text="DOJ  :"
            android:textColor="@color/blue"
            android:layout_below="@id/tvDob"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvDoj"
            android:text="10-12-2022"
            android:layout_below="@id/tvDob"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/tvDojTag"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/semibold"
            android:layout_height="wrap_content"/>



        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvpasswordTag"
            android:text="Do you want to change Password?"
            android:layout_below="@id/tvDoj"
            android:textSize="15dp"
            android:textColor="@color/Radio"
          android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/semibold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvpassword"
            android:text="Click here"
            android:layout_below="@id/tvpasswordTag"
            android:textSize="15dp"
            android:visibility="visible"
            android:textColor="@color/blue"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/semibold"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rlpass"
            android:layout_below="@id/tvpasswordTag"
            android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvClose"
            android:text="Close here"

            android:textSize="15dp"
            android:visibility="gone"
            android:textColor="@color/blue"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/semibold"
            android:layout_height="wrap_content"/>


        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/edNewPass"
            android:hint="New password"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/semibold"
            android:textSize="15dp"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:inputType="textPassword"
            android:visibility="gone"
            android:background="@drawable/edittext"
            android:backgroundTint="#B6BFCD"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvClose"
             />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvcheck"
                android:text="You must have 7 characters in your password"
                android:layout_below="@id/edNewPass"
                android:textSize="15dp"
                android:visibility="gone"
                android:textColor="#3848FA"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/semibold"
                android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/edRetypePass"
            android:visibility="gone"
            android:maxLines="1"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:hint="Retype password"
            android:textColor="@color/black"
            android:fontFamily="@font/semibold"
            android:textSize="15dp"
            android:background="@drawable/edittext"
            android:backgroundTint="#B6BFCD"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/edNewPass"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvpasswordnotmatch"
            android:text="Password Not Matched"
            android:layout_below="@id/edRetypePass"
            android:textSize="15dp"
            android:visibility="gone"
            android:textColor="@color/Radio"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/semibold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvpasswordlisten1"
            android:text="Password is Matched"
            android:layout_below="@id/edRetypePass"
            android:textSize="15dp"
            android:visibility="gone"
            android:textColor="#00FF00"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/semibold"
            android:layout_height="wrap_content"/>

        </RelativeLayout>


        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/rlpass"
            android:layout_marginTop="20dp"
            android:id="@+id/btnpasssubmit"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/bold"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Submit"
            android:background="@drawable/cardview"/>




    </RelativeLayout>


    </ScrollView>
</RelativeLayout>
</ScrollView>