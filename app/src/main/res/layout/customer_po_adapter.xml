<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">


                <RelativeLayout
                    android:id="@+id/rlId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">



                    <RadioButton
                        android:id="@+id/rbId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp" />

                    <TextView
                        android:id="@+id/tvrbId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="13dp"
                        android:layout_toRightOf="@id/rbId"
                        android:fontFamily="@font/openssansbold"
                        android:text="Hyderabad"
                        android:textColor="@color/DarkRed"
                        android:textSize="15dp"
                        android:visibility="visible" />


                </RelativeLayout>


                <TextView
                    android:id="@+id/tvPONo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlId"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/openssansbold"
                    android:text="Cistron System"
                    android:textColor="@color/blue"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tvPoDateTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPONo"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/semibold"
                    android:text="Po Date :"
                    android:textColor="@color/Radio"
                    android:textSize="15dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvPoDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPONo"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/tvPoDateTag"
                    android:fontFamily="@font/openssanssemibold"
                    android:text="Hyderabad"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/tvPoRefTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPoDate"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/semibold"
                    android:text="Po Ref :"
                    android:textColor="@color/Radio"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:id="@+id/rlPdf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPoDate"
                    android:layout_toRightOf="@id/tvPoRefTag">


                    <ImageView
                        android:id="@+id/ivPdf"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/pdffile" />

                    <TextView
                        android:id="@+id/tvPoRef"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="14dp"
                        android:layout_toRightOf="@id/ivPdf"
                        android:fontFamily="@font/openssansreqular"
                        android:src="@drawable/pdffile"
                        android:text="Pdf"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                </RelativeLayout>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</RelativeLayout>