<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">





                <TextView
                    android:id="@+id/tvPartName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/bold"
                    android:text="Cistron System"
                    android:textColor="@color/blue"
                    android:textSize="18dp" />





                <TextView
                    android:id="@+id/tvPartNoTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPartName"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/semibold"
                    android:text="Part No :"
                    android:visibility="visible"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvPartNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPartName"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"
                    android:layout_toRightOf="@id/tvPartNoTag"
                    android:fontFamily="@font/semibold"
                    android:text="Cl"
                    android:textColor="@color/Radio"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/tvUnitPriceTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPartNo"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"
                    android:fontFamily="@font/semibold"
                    android:text="Unit Price :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvUnitPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPartNo"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"
                    android:layout_toRightOf="@id/tvUnitPriceTag"
                    android:fontFamily="@font/semibold"
                    android:text="fullDay"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvStoreQtyTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvUnitPrice"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"
                    android:fontFamily="@font/semibold"
                    android:text="Store Qty :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvStoreQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvUnitPrice"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"
                    android:layout_toRightOf="@id/tvStoreQtyTag"
                    android:fontFamily="@font/semibold"
                    android:text="fullDay"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/tvCoQtyTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvStoreQty"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"
                    android:fontFamily="@font/semibold"
                    android:text="Coordinator Qty : "
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvCoQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvStoreQty"

                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"
                    android:layout_toRightOf="@id/tvCoQtyTag"
                    android:fontFamily="@font/semibold"
                    android:text="fullDay"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvMyQtyTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvCoQty"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"
                    android:fontFamily="@font/semibold"
                    android:text="My Qty :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvMyQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvCoQty"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="3dp"
                    android:visibility="visible"
                    android:layout_toRightOf="@id/tvMyQtyTag"
                    android:fontFamily="@font/semibold"
                    android:text="fullDay"
                    android:textColor="@color/black"
                    android:textSize="15dp" />




                <TextView
                    android:id="@+id/tvSendReq"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@id/tvMyQty"
                    android:layout_marginLeft="20dp"
                   android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/dialog_backgroud"
                    android:backgroundTint="@color/Burgundy"
                    android:visibility="visible"
                    android:fontFamily="@font/semibold"
                    android:text="Send Request"
                    android:textColor="@color/whiteLite1"
                    android:textSize="15dp" />





            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</RelativeLayout>