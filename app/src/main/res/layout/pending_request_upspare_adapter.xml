<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/cvView"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvSeialNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/openssansbold"
                    android:text="Cistron System"
                    android:textColor="@color/blue"
                    android:textSize="17dp" />


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/tvSeialNo"
                    android:layout_alignParentRight="true"
                    android:tint="@color/RoseRed"
                    android:src="@drawable/ic_baseline_keyboard_double_arrow_right_24"
                    tools:ignore="UseAppTint" />


                <TextView
                    android:id="@+id/tvDateTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_below="@+id/tvPurpose"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/semibold"
                    android:text="Requested Date :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/tvDate"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/tvDateTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPurpose"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/semibold"
                    android:text="2023-01-23"
                    android:textColor="@color/Burgundy"
                    android:textSize="15dp" />





                <TextView
                    android:id="@+id/tvPurposeTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_below="@+id/tvSeialNo"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/semibold"
                    android:text="Purpose :"
                    android:visibility="visible"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvPurpose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/tvSeialNo"
                    android:layout_toRightOf="@+id/tvPurposeTag"
                    android:visibility="visible"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/semibold"
                    android:text="Cl"
                    android:textColor="@color/Radio"
                    android:textSize="15dp" />



            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</RelativeLayout>