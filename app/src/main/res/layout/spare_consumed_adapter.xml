<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvPartName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@id/tvPartNoTag"
                    android:fontFamily="@font/bold"
                    android:text="Cistron System"
                    android:textColor="@color/blue"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/tvDateTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_below="@+id/tvPartName"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/semibold"
                    android:text="Consumption Date :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/tvDate"
                    android:layout_toRightOf="@+id/tvDateTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPartName"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/semibold"
                    android:text="2023-01-23"
                    android:textColor="@color/Burgundy"
                    android:textSize="15dp" />





                <TextView
                    android:id="@+id/tvPartNoTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/tvPartNo"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/semibold"
                    android:text="Part No :"
                    android:visibility="visible"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvPartNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/semibold"
                    android:text="Cl"
                    android:textColor="@color/Radio"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/tvUnitPriceTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDate"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"
                    android:fontFamily="@font/semibold"
                    android:text="Unit Price :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvUnitPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDate"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"
                    android:layout_toRightOf="@id/tvUnitPriceTag"
                    android:fontFamily="@font/semibold"
                    android:text="100"
                    android:textColor="@color/bluegray"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvStoreQtyTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tvUnitPrice"
                    android:layout_below="@id/tvDate"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"
                    android:fontFamily="@font/semibold"
                    android:text="Consumed Qty:"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvStoreQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDate"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"
                    android:layout_toRightOf="@id/tvStoreQtyTag"
                    android:fontFamily="@font/semibold"
                    android:text="100"
                    android:textColor="@color/bluegray"
                    android:textSize="15dp" />




            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</RelativeLayout>