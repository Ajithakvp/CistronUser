<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:id="@+id/tvId"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/openssansbold"
                    android:text="# 1989 -"
                    android:textColor="@color/Burgundy"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/tvPartName"
                    android:layout_toRightOf="@+id/tvId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/bold"
                    android:text="Cistron System"
                    android:textColor="@color/blue"
                    android:textSize="18dp" />





                <TextView
                    android:id="@+id/tvPartNoTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPartName"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/semibold"
                    android:text="Part No :"
                    android:visibility="visible"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvPartNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPartName"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toLeftOf="@+id/tvMyqtyTag"
                    android:visibility="visible"
                    android:layout_toRightOf="@id/tvPartNoTag"
                    android:fontFamily="@font/semibold"
                    android:text="Cl"
                    android:textColor="@color/RoseRed"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/tvMyqtyTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPartName"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"
                    android:layout_toLeftOf="@+id/tvMyqty"
                    android:fontFamily="@font/semibold"
                    android:text="My Qty :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvMyqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPartName"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentRight="true"
                    android:visibility="visible"
                    android:fontFamily="@font/semibold"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/tvQtyReqTag"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@id/tvMyqty"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:visibility="visible"
                    android:fontFamily="@font/semibold"
                    android:text="Qty to request :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edQtyReq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:layout_below="@id/tvMyqty"
                    android:minHeight="40dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/edittext"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/Burgundy"
                    android:layout_marginRight="3dp"
                    android:visibility="visible"
                    android:layout_toRightOf="@id/tvQtyReqTag"
                    android:fontFamily="@font/semibold"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/tverror"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@id/edQtyReq"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:fontFamily="@font/semibold"
                    android:text="Quantity should be smaller than Stock"
                    android:textColor="@color/Radio"
                    android:textSize="13dp" />



            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</RelativeLayout>