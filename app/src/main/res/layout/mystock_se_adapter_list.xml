<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="20dp">


            <RelativeLayout
                android:id="@+id/rlView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#FEFCFF"
                android:visibility="visible">


                <RelativeLayout
                    android:id="@+id/rlEmployee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Cistronbasecolor"
                    android:padding="10dp"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/tvpartName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/bold"
                        android:text="SM 15 Oil Separator Cartridge"
                        android:textColor="@color/white"
                        android:textSize="18dp" />


                </RelativeLayout>


                <TextView
                    android:id="@+id/tvPartIdTag"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlEmployee"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/latest"
                    android:text="Part ID       :"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvPartId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlEmployee"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/tvPartIdTag"
                    android:fontFamily="@font/semibold"
                    android:text="233"
                    android:textColor="@color/DarkRed"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:id="@+id/rlPartIdName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@id/rlEmployee"
                    android:layout_toRightOf="@id/tvPartId">


                    <TextView
                        android:id="@+id/tvPartcisIdName"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/edittext"
                        android:backgroundTint="@color/RoseRed"
                        android:fontFamily="@font/semibold"
                        android:gravity="center"
                        android:minHeight="30dp"
                        android:text="cis"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvPartcsplIdName"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/edittext"
                        android:backgroundTint="@color/Cistronbasecolor"
                        android:fontFamily="@font/semibold"
                        android:gravity="center"
                        android:minHeight="30dp"
                        android:text="cspl"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvPartotherIdName"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/edittext"
                        android:backgroundTint="@color/Cistronbasecolor"
                        android:fontFamily="@font/semibold"
                        android:gravity="center"
                        android:minHeight="30dp"
                        android:text="cspl"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:visibility="gone" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/tvPartNoTag"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlPartIdName"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/latest"
                    android:text="Part No      :"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvPartNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlPartIdName"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/tvPartNoTag"
                    android:fontFamily="@font/semibold"
                    android:text="INDS5704L"
                    android:textColor="@color/DarkRed"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/tvUnitPriceTag"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPartNo"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/latest"
                    android:text="Unit Price :"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvUnitPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPartNo"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/tvUnitPriceTag"
                    android:fontFamily="@font/semibold"
                    android:text="3573"
                    android:textColor="@color/DarkRed"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvMyQtyTag"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvUnitPrice"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/latest"
                    android:text="My Qty      :"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvMyQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvUnitPrice"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/tvMyQtyTag"
                    android:fontFamily="@font/semibold"
                    android:text="3573"
                    android:textColor="@color/DarkRed"
                    android:textSize="16dp" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>