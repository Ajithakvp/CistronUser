<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Activity.DashboardActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/skyblue"
        android:id="@+id/rlhead"
        android:backgroundTint="#6495ED"
        android:layout_height="55dp">

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/ivName"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_top"
            android:layout_centerInParent="true"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ivLogout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@id/ivName"
           app:lottie_rawRes="@raw/logout"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:tint="@color/white" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ivprofile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="70dp"
            android:layout_toStartOf="@id/ivName"
            app:lottie_rawRes="@raw/person"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:tint="@color/white" />





    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/card_design"
        android:backgroundTint="#6495ED"
        android:layout_height="250dp"
        android:layout_below="@+id/rlhead"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rlProfile"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:background="@drawable/cardview"
        android:backgroundTint="#FEFCFF	"
        android:layout_below="@id/rlhead"
        android:layout_height="60dp">

        <TextView
            android:layout_width="330dp"
            android:id="@+id/tvProfilename"
            android:textSize="20dp"
            android:layout_toRightOf="@id/ivprofilename"
            android:layout_centerVertical="true"
            android:fontFamily="@font/semibold"
            android:layout_marginLeft="6dp"
            android:textColor="@color/black"
           android:text="Cistron System private ltd"
            android:layout_height="wrap_content"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ivprofilename"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
           app:lottie_rawRes="@raw/person2"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:tint="@color/white" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@id/rlProfile"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/cardview"
        android:backgroundTint="#FEFCFF">

        <LinearLayout
            android:id="@+id/llview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/cvAttendance"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:backgroundTint="@color/skyblue"
                app:cardCornerRadius="20dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/tvDoj"
                    android:layout_gravity="center"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/attendancegif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="45dp"
                    android:fontFamily="@font/bold"
                    android:text="Attendance"
                    android:textColor="@color/white" />


            </androidx.cardview.widget.CardView>


            <!--        Expenses-->

            <androidx.cardview.widget.CardView
                android:id="@+id/cvExpense"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/cvAttendance"
                android:layout_weight="1"
                android:backgroundTint="@color/skyblue"
                app:cardCornerRadius="20dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/expense" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="45dp"
                    android:fontFamily="@font/bold"
                    android:text="Expenses"
                    android:textColor="@color/white" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <!--        Leave-->


        <androidx.cardview.widget.CardView
            android:id="@+id/cvLeave"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/llview"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/skyblue"
            app:cardCornerRadius="20dp">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/leave"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/bold"
                android:text="Leave Application"
                android:textColor="@color/white" />


        </androidx.cardview.widget.CardView>


        <!--        <View-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:id="@+id/viewcenter"-->
        <!--            android:background="@color/white"-->
        <!--            android:layout_centerInParent="true"-->
        <!--            android:layout_height="0.9dp"/>-->

        <!--        <View-->
        <!--            android:layout_width="0.9dp"-->
        <!--            android:id="@+id/viewhorcenter"-->
        <!--            android:background="@color/white"-->
        <!--            android:layout_centerHorizontal="true"-->
        <!--            android:layout_height="230dp"/>-->

    </RelativeLayout>

</RelativeLayout>