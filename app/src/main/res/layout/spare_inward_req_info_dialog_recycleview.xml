<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dialog_backgroud"
    android:backgroundTint="@color/liteYellow">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/ivClose"
            android:fontFamily="@font/roboblod"
            android:gravity="center"
            android:text="Spare Request Info"
            android:textColor="@color/Burgundy"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:src="@drawable/ic_baseline_close_24"
            android:tint="@color/Burgundy"
            tools:ignore="UseAppTint" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSpareInwardReqInfo"
            android:layout_width="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivClose"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

</RelativeLayout>