<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/bold"
                    android:text="Cistron System"
                    android:textColor="@color/blue"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tvspace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/tvName"
                    android:fontFamily="@font/bold"
                    android:text="-"
                    android:textColor="@color/blue"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvEmpId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/tvspace"
                    android:fontFamily="@font/bold"
                    android:text="E367"
                    android:textColor="@color/Radio"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/tvSumTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvName"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/semibold"
                    android:text="Sum :"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvSum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvName"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/tvSumTag"
                    android:fontFamily="@font/semibold"
                    android:text="27173"
                    android:textColor="@color/black"
                    android:textSize="16dp" />



                <TextView
                    android:id="@+id/tvWeek1Tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvSum"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:fontFamily="@font/semibold"
                    android:text="Week  1 :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvWeek1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvSum"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/tvWeek1Tag"
                    android:fontFamily="@font/semibold"
                    android:text="345"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/tvWeek2Tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvWeek1"
                    android:layout_marginLeft="8dp"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/semibold"
                    android:text="Week  2 :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvWeek2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvWeek1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:layout_toRightOf="@id/tvWeek2Tag"
                    android:fontFamily="@font/semibold"
                    android:text="345"
                    android:textColor="@color/black"
                    android:textSize="15dp" />



                <TextView
                    android:id="@+id/tvWeek3Tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvWeek2"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:fontFamily="@font/semibold"
                    android:text="Week  3 :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvWeek3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvWeek2"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/tvWeek3Tag"
                    android:fontFamily="@font/semibold"
                    android:text="345"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvWeek4Tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvWeek3"
                    android:layout_marginLeft="8dp"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/semibold"
                    android:text="Week  4 :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvWeek4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvWeek3"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:layout_toRightOf="@id/tvWeek4Tag"
                    android:fontFamily="@font/semibold"
                    android:text="345"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/tvWeek5Tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvWeek4"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:fontFamily="@font/semibold"
                    android:text="Week  5 :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvWeek5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvWeek4"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/tvWeek5Tag"
                    android:fontFamily="@font/semibold"
                    android:text="345"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/tvWeek6Tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvWeek5"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/semibold"
                    android:text="Week  6 :"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvWeek6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvWeek5"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/tvWeek6Tag"
                    android:fontFamily="@font/semibold"
                    android:text="345"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</RelativeLayout>