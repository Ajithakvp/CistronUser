<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Cistronbasecolor">

            <RelativeLayout
                android:id="@+id/rlhead"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/Cistronbasecolor">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboblack"
                    android:text="Swap Spares"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_baseline_close_24"
                    android:tint="@color/white"
                    tools:ignore="UseAppTint" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rltable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlhead">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/rlPartname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bluegray">

                            <TextView
                                android:id="@+id/tvPartName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="8dp"
                                android:fontFamily="@font/openssansbold"
                                android:gravity="center"
                                android:text="testconsumablesonly"
                                android:textColor="@color/white"
                                android:textSize="20dp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rlPartname">

                            <TextView
                                android:id="@+id/tvPartnoTag"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/openssansbold"
                                android:text="Part No -"
                                android:textColor="@color/Cistronbasecolor"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/tvPartno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_toLeftOf="@+id/ivdelete"
                                android:layout_toRightOf="@+id/tvPartnoTag"
                                android:fontFamily="@font/openssanssemibold"
                                android:text="testitestingtestingtestingtestingtestingng"
                                android:textColor="@color/DarkBrown"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/tvUnitpriceTag"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvPartno"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/openssansbold"
                                android:text="Unit Price -"
                                android:textColor="@color/Cistronbasecolor"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/tvUnitprice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvPartno"
                                android:layout_margin="10dp"
                                android:layout_toRightOf="@+id/tvUnitpriceTag"
                                android:fontFamily="@font/openssanssemibold"
                                android:text="20"
                                android:textColor="@color/DarkBrown"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/tvMyqtyTag"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvUnitprice"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/openssansbold"
                                android:text="My Qty -"
                                android:textColor="@color/Cistronbasecolor"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/tvMyqty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvUnitprice"
                                android:layout_margin="10dp"
                                android:layout_toRightOf="@+id/tvMyqtyTag"
                                android:fontFamily="@font/openssanssemibold"
                                android:text="4"
                                android:textColor="@color/DarkBrown"
                                android:textSize="16dp" />


                            <TextView
                                android:id="@+id/tvQty2outTag"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvMyqty"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/openssansbold"
                                android:text="Qty To Out -"
                                android:textColor="@color/Cistronbasecolor"
                                android:textSize="16dp" />


                            <EditText
                                android:id="@+id/edQty2out"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvMyqty"
                                android:layout_margin="10dp"
                                android:inputType="numberDecimal"
                                android:layout_toRightOf="@+id/tvQty2outTag"
                                android:background="@drawable/edittext"
                                android:backgroundTint="@color/DarkBrown"
                                android:fontFamily="@font/openssanssemibold"
                                android:minWidth="50dp"
                                android:paddingLeft="10dp"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="16dp" />

                            <ImageView
                                android:id="@+id/ivdelete"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:layout_margin="10dp"
                                android:src="@drawable/ic_baseline_delete_24" />


                        </RelativeLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rltable">

                <TextView
                    android:id="@+id/tvengTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/openssansbold"
                    android:text="Select the Engineer :"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/speng"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/tvengTag"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittext"
                    android:padding="10dp" />


                <TextView
                    android:id="@+id/tvDatetimeTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/speng"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/openssansbold"
                    android:text="@string/DateTime"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvDatetime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/tvDatetimeTag"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:background="@drawable/edittext"
                    android:fontFamily="@font/openssanssemibold"
                    android:gravity="center"
                    android:hint="Date and Time" />


                <TextView
                    android:id="@+id/tvModeOfTransportTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDatetime"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/openssansbold"
                    android:text="Transportation Type :"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/spModeOfTransport"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/tvModeOfTransportTag"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittext"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/tvRefTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spModeOfTransport"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/openssansbold"
                    android:text="Reference :"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edRef"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvRefTag"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:background="@drawable/edittext"
                    android:fontFamily="@font/openssanssemibold"
                    android:gravity="center"
                    android:hint="Please enter the reference"
                    android:minHeight="50dp" />

                <TextView
                    android:id="@+id/tvSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/edRef"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext"
                    android:backgroundTint="@color/darkGreen"
                    android:fontFamily="@font/openssanssemibold"
                    android:gravity="center"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="20dp" />


            </RelativeLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>